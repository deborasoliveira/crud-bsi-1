
def menu_principal():
    print("DIGITE 1 PARA TER ACESSO AO MENU DO ALUNO\n"
          "DIGITE 2 PARA TER ACESSO AO MENU DO PROFESSOR\n"
          "DIGITE 3 PARA TER ACESSO AO MENU DE DISCIPLINA\n"
          "DIGITE 4 PARA TER ACESSO AO MENU DE TURMAS\n"
          "DIGITE 0 PARA FINALIZAR A OPERAÇÃO")

def menu_professor():
    print("DIGITE 1 PARA CADASTRAR PROFESSOR\n"
          "DIGITE 2 PARA REMOVER CADASTRO\n"
          "DIGITE 3 PARA CONSULTA\n"
          "DIGITE 4 PARA ATUALIZAR CADASTRO\n"
          "DIGITE 0 PARA RETORNAR AO MENU PRINCIPAL\n")
menu_professor()

